{{!-- {{#each tickets as |ticket|}} --}}
{{> ticket-header}}
{{!-- {{/each}} --}}



<div class="row" style="margin-top:300px;">

      <div class="col-sm-12 col-md-6" style="margin-top:100px;">
        <div class="card">
          <div class="card-body" style=" background-color:#e7e7e7;">
            <form id="ticketInfo">

            <h2>{{ticket.ticket_title}}</h2>

            <label class="form-label mt-2">Subject</label>
            <input class="form-control" type="text" id="ticketSubject"  value="{{ticket.ticket_title}}" >

            <label class="form-label mt-2">Description</label>
            <textarea class="form-control" id="ticketDescription" rows="3" placeholder="{{ticket.ticket_text}}">{{ticket.ticket_text}}</textarea>
            <label class="form-label mt-2">Urgency</label>
                {{{renderUrgencyOptions ticket.urgency}}}

            <label class="form-label mt-2">Status</label>
                {{{renderStatus ticket.status}}}

            <button type="button" class="mt-3 btn btn-primary mx-4" id="saveChanges">Save Changes</button>

            </form>
          </div>
        </div>
      </div>

    <div class="col-sm-12 col-md-6">
        <div class="container py-1">
                <div class="row">

                    <div class="col-lg-7 mx-auto">
                      <h2 style="border-bottom:thin solid black;">Timeline</h2>
                      
                            {{#each ticket.logs as |log|}}
                          <ul class="timeline"> 

                              <li class="timeline-item rounded ml-3 p-4 shadow">
                                <div class="timeline-arrow"></div>
                                <div data-id="{{log.id}}"><b>Ticket Created!</b></div>
                              </li>

                              <i class="fa fa-clock-o mr-1 ml-3 mb-3 mt-3"></i><span data-id="{{ticket_id}}" class="small text-gray">{{{ format_date date_created}}}</span>

                              <li class="timeline-item rounded ml-3 p-4 shadow">
                                <div class="timeline-arrow"></div>
                                <div data-id="{{log.id}}"><b>Ticket Claimed!</b></div>
                              </li>

                              <i class="fa fa-clock-o mr-1 ml-3"></i>
                                <span data-id="{{ticket_id}}" class="small text-gray">
                                  {{{ format_date date_created}}}
                                </span>

                              <li class="timeline-item rounded ml-3 p-4 shadow">
                                <div class="timeline-badge primary">
                                  <div class="timeline-arrow"></div>
                                  <b>Comment Added!</b>
                                </div>
                              </li>

                              <i class="fa fa-clock-o mr-1 ml-3 mb-3 mt-3"></i><span data-id="{{ticket_id}}" class="small text-gray">{{{ format_date date_created}}}</span>
                          </ul>
                            {{/each}}
                        {{!-- View Comments button needs to have event listener to trigger a modal that opens chat --}}
                        <button data-toggle="modal" data-target="exampleModal" type="button" class="mt-3 btn btn-primary mx-4">
                          <div data-id="{{log.id}}">
                            View Comments
                          </div>
                        </button>

                    </div>
                </div>
            </div>
    </div>
</div>

<div style="display:flex; justify-content:center; margin-top:50px;">
  <button href="/" type="button" class="fa-arrow-left:before mt-3 btn btn-primary mx-4">
    <i class="fa fa-plus">Back</i>
  </button>
</div>

{{> ticket-chat}}